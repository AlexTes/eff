{
  "name": "eff",
  "version": "0.1.0",
  "description": "An experience for the heart.",
  "main": "index.js",
  "repository": "git@github.com:AlexTes/eff",
  "author": "Alexander Tesfamichael <alex.tesfamichael@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "koa": "2",
    "koa-pino-logger": "2",
    "koa-static": "next",
    "pify": "^2.3.0",
    "pino": "^3.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-latest": "^6.22.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "jest": "^18.1.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "sugarss": "^0.2.0"
  },
  "scripts": {
    "build": "npm run clean && run-p build:*",
    "build:pug": "pug src/public/index.pug --out dist/public",
    "build:css": "postcss -o dist/public/main.css -p sugarss src/public/*.sss",
    "build:js": "babel -d dist/ --ignore *.test.js src/",
    "build:vid": "mkdir dist/public && cp -r src/public/vid dist/public/",
    "clean": "rm -r dist/ && mkdir dist/",
    "deploy": "npm run build && run-s deploy:* && ssh root@51.15.63.110 'cd eff/; npm run restart &'",
    "deploy:files": "sh script/deploy-files",
    "kill": "sh script/kill-server",
    "lint": "run-s lint:*",
    "lint:js": "eslint --cache src/",
    "lint:css": "stylelint src/public/*.sss",
    "restart": "run-s kill start",
    "start": "node dist/index.js",
    "start:dev": "babel-node src/index.js",
    "test": "jest src/",
    "watch": "npm run clean && run-p build:* && run-p watch:js watch:css watch:pug watch:vid watch:server",
    "watch:css": "npm run build:css -- --watch",
    "watch:pug": "npm run build:pug -- --watch",
    "watch:js": "onchange 'src/**/*.js' --exclude 'src/**/*.test.js' -- npm run build:js",
    "watch:server": "onchange 'dist/**/*.js' --initial -- npm run start",
    "watch:vid": "onchange 'vid/*' -- npm run build:vid"
  }
}
