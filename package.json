{
  "name": "every-flavour-feels",
  "version": "0.1.0",
  "description": "An experience for the heart.",
  "main": "index.js",
  "repository": "git@github.com:AlexTes/every-flavour-feels.git",
  "author": "Alexander Tesfamichael <alex.tesfamichael@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {},
  "devDependencies": {
    "eslint": "^3.14.1",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "npm-run-all": "^4.0.1",
    "postcss-cli": "^2.6.0",
    "pug-cli": "^1.0.0-alpha6",
    "stylelint": "^7.8.0",
    "stylelint-config-standard": "^16.0.0",
    "sugarss": "^0.2.0"
  },
  "scripts": {
    "lint": "npm-run-all lint:*",
    "lint:js": "eslint --cache src/",
    "lint:css": "stylelint src/client/css/*.sss",
    "build": "npm-run-all build:*",
    "build:pug": "pug src/client/index.pug --out dist/",
    "build:css": "postcss -o dist/main.css -p sugarss src/client/css/*.sss",
    "watch": "npm-run-all watch:*",
    "watch:css": "npm run build:css -- --watch",
    "watch:pug": "npm run build:pug -- --watch"
  }
}
